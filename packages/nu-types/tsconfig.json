{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "isolatedModules": true,
    "types": ["node"],
    "typeRoots": ["@types"],
    "noEmit": true
  },
  "include": [
    "index.ts",
    "constants/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "**/node_modules/*"],
  "files": [
    "index.ts"
  ]
}
