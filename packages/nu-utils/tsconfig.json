{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "isolatedModules": false,
    "types": ["jest", "node", "lodash", "next"],
    "typeRoots": [
      "./src/@types"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
  ]
}
